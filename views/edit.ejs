<%- include('partials/header') %>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit Blog</div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <input type="text" name="blog[title]" value="<%= blog.title %>" required>
            </div>
            <div class="field">
                <input type="url" name="blog[image]" value="<%= blog.image %>" required>
            </div>
            <div class="field">
                <textarea name="blog[body]" required><%= blog.body %></textarea>
            </div>
            <input class="ui black basic button" type="submit" value="Edit Post">
        </form>
    </div>

    <%- include('partials/footer') %>